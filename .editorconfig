# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{py,md}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2 

[Makefile]
indent_style = tab

[{django.yml, pytest.ini}]
indent_style = space
indent_size = 2
